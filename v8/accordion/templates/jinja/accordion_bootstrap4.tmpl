{% block content %}
<div id="accordion{{ unique_id }}" class="accordion">
  {% for i in range(box_titles|length) %}
    <div class="card">
      <div class="card-header" id="heading{{ unique_id }}_{{ i }}">
        <h1 class="mb-0">
          {% if i == 0 %}
            <button class="btn btn-link" type="button" data-toggle="collapse" data-target="#collapse{{ unique_id }}_{{ i }}" aria-expanded="true" aria-controls="collapse{{ unique_id }}_{{ i }}">
          {% else %}
            <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapse{{ unique_id }}_{{ i }}" aria-expanded="true" aria-controls="collapse{{ unique_id }}_{{ i }}">
          {% endif %}
          {{ box_titles[i] }}
          </button>
        </h1>
      </div>
      {% if i == 0 %}
        <div id="collapse{{ unique_id }}_{{ i }}" class="collapse show" aria-labelledby="heading{{ unique_id }}_{{ i }}" data-parent="#accordion{{ unique_id }}">
      {% else %}
        <div id="collapse{{ unique_id }}_{{ i }}" class="collapse" aria-labelledby="heading{{ unique_id }}_{{ i }}" data-parent="#accordion{{ unique_id }}">
      {% endif %}
        <div class="card-body">
          {{ box_contents[i] }}
        </div>
      </div>
    </div>
  {% endfor %}
</div>
{% endblock %}
